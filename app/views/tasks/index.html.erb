<% @tasks.each do |task| %>
  <h2><%= task.name %></h2>
  <p><%= task.done %></p>
  <%= link_to "Show", task_path(task.id) %>
  <%= link_to "Edit", edit_path(task.id) %>
  <%= link_to "Delete", delete_path(task.id),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
<% end %>

<br><br><br><%= link_to "New task", tasks_new_path %>
